{
    "moduleDirectories": [
        "node_modules",
        "src"
    ],
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage-e2e",
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1",
        "@nestjs-modules/mailer/dist/adapters/handlebars.adapter": "<rootDir>/__mocks__/@nestjs-modules/mailer/dist/adapters/handlebars.adapter.ts"
    }
}